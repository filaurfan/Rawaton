<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h1>Update Product</h1>
		<ol class="breadcrumb">
		  <li><a href="index2.html"><i class="fa fa-dashboard"></i> Home</a></li>
		  <li><a href="Barang.html">Product</a></li>
		  <li class="active">Update Product</li>
		</ol>
	</section>

	<!-- Main content -->
	<section class="content">
	<form method="post" action="/seller/input">
		{{#each products}}
		<div class="form-group">
			<label for="name_product">{{ name_product }}</label>
			<input type="text" class="form-control" name="name_product" id="name_product">
		</div>
		<div class="form-group">
			<label for="category">Category</label>
			<select class="form-control" onclick="displayResult(this.value)" name="category" id="category" value={{ category_product }}>
				<option name="category" value="Otomotif">Otomotif</option>
				<option name="category" value="Smartphone_Handphone">Smartphone & Handphone</option>
				<option name="category" value="Fashion">Fashion</option>
			</select>
			<input type="hidden" name="category_product" id="category_product" value={{ category_product }} />
		</div>
		<div class="form-group">
			<label for="price_product">Price</label>
			<input type="text" class="form-control"  name="price_product" id="price_product" value={{ price_product }}>
		</div>
		<div class="form-group">
			<label for="entity_product">Entity</label>
			<input type="text" class="form-control" name="entity_product" id="entity_product" value={{ entity_product }}>
		</div>
		<div class="form-group">
			<label for="description_product">Descryption</label>
			<textarea rows="5" name="description_product" id="description_product" class="form-control" value={{ description_product }}></textarea>
		</div>
		<div class="form-group">
			<label for="picture_product">Image</label>
			<input type="file" name="picture_product" id="picture_product" value="/admin/images/".{{ picture_product }}.""><br>
		</div>
		{{/each}}
		<input type="submit" name="mit" class="btn btn-primary" value="Submit">
		<button type="reset" class="btn btn-success">Cancel</button>
	</form>
	</section>
</div>

<script>
  function displayResult(category){ 
    document.getElementById("category_product").value=category; 
  }
</script>