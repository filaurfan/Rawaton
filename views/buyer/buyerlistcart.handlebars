  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
       Product
      </h1>
      <ol class="breadcrumb">
        <li><a href="/seller/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Product</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <p>
      <a href="/seller/input" class="btn btn-primary">Add New</a>
      </p>

      <div class="table-responsive">
         <table class="table table-bordered table-hover table-striped">
            <caption>List Data Barang</caption>
            <thead>
              <tr>
                <th width="50px">No</th>
                <th width="100px">Image</th>
                <th width="150px">Nama</th>
                <th width="150px">Category</th>
                <th width="150px">Price</th>
                <th width="10px">Entity</th>
                <th width="500px">Descryption</th>
                <th width="500px" hidden="hidden">Created at</th>
                <th width="80px">Action</th>
              </tr>
            </thead>
            <tbody>
            {{#each products}}
                <td>{{ _id }}</td>
                <td><img src='/uploads/{{ picture_product }}'></td>
                <td>{{ name_product }}</td>
                <td>{{ category_product }}</td>
                <td>Rp. {{ price_product }}</td>
                <td>{{ entity_product }}</td>
                <td>{{ description_product }}</td>
                <td hidden="hidden">{{ created_at }}</td>
                <td>
                	<a class="btn btn-warning btn-xs" href='/seller/product/{{ _id }}' ><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>

                	<a onClick="return confirm('Anda yakin ingin menghapus data ini?')" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
              </tr>
              {{/each}}
            </tbody>
         </table>
      </div>
    </section>
    
  </div>