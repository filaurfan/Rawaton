<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Keranjang</h1>
        {{#carts}}
        <small>{{ tanggal_buat }}</small>
        <ol class="breadcrumb">
            <li><a href="/cart/list/{{ id_user }}"><i class="fa fa-shopping-cart"></i> Keranjang</a></li>
        </ol>
        {{/carts}}
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-8">
            
        </div>
        <div class="col-md-12 box-body">
            <div class="table">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th width="5px"><input type="CHECKBOX" name="pilih_all"></th>
                            <th width="10px">No</th>
                            <th width="100px">Gambar</th>
                            <th width="150px">Nama Barang</th>
                            <th width="150px">Nama Toko</th>
                            <th width="10px">Jumlah</th>
                            <th width="50px">Harga</th>
                            <th width="10px">Hapus</th>
                        </tr>
                    </thead>
                    {{#each items}}
                    <tbody>
                        <td><input type="CHECKBOX" name="pilih"></td>
                        <td>{{ id_product }} </td>
                        <td><img class="profile-user-img img-responsive img-circle" src="../../{{ gambar_item }}"></td>
                        <td>{{ nama_product }}</td>
                        <td>{{ nama_seller }}</td>
                        <td>{{ jumlah }}</td>
                        <td>Rp. {{ harga_nego }}</td>
                        <td>
                            <a onClick="return confirm('Anda yakin ingin menghapus data ini?')" href='/cart/delete/{{ _id }}' class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </td>
                    </tbody>
                    {{/each}}
                    <tbody>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>Total</td>
                        <td></td>
                        <td></td>
                        {{#carts}}
                        <td>Rp. {{total_harga}}</td>
                        {{/carts}}
                        <td></td>
                    </tbody>
                </table>
            <div class="col-md-8"></div>
                <input type="submit" name="mit" class="btn btn-success" value="nego">
                <input type="submit" name="mit" class="btn btn-info" value="checkout">
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->