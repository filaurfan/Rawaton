

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>List Pemesanan</h1>
        {{#carts}}
        <small>{{ tanggal_buat }}</small>
        <ol class="breadcrumb">
            <li><a href="/seller/dashboard/{{ id_user }}"><i class="fa fa-dashboard"></i> Beranda</a></li>
            <li><a href="/seller/pemesanan/{{ id_user }}"><i class="fa fa-shopping-cart"></i> Pemesanan</a></li>
            <li><a href="/seller/listpemesanan/{{ id_user }}/{{ _id }}"><i class="fa fa-shopping-cart"></i> List Pemesanan</a></li>
        </ol>
        {{/carts}}
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-8">
            
        </div>
        <div class="col-md-12 box-body">
            <div class="table">
                <table class="table table-bordered table-hover table-striped" >
                    <thead>
                        <tr>
                            <th width="5px"></th>
                            <th width="10px">No</th>
                            <th width="100px">Gambar</th>
                            <th width="150px">Nama Barang</th>
                            <th width="150px">Nama Toko</th>
                            <th width="10px">Jumlah</th>
                            <th width="50px">Harga</th>
                            <th width="10px">Hapus</th>
                        </tr>
                    </thead>
                    {{#each items}}
                    <tbody>
                        <td><input type="CHECKBOX" name="pilih"></td>
                        <td>{{ id_product }} </td>
                        <td><img class="profile-user-img img-responsive img-circle" src="../../{{ gambar_item }}"></td>
                        <td>{{ nama_product }}</td>
                        <td>{{ nama_seller }}</td>
                        <td>{{ jumlah }}</td>
                        <td>Rp. {{ harga_nego }}</td>
                    </tbody>
                    {{/each}}
                    <tbody>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>Total</td>
                        <td></td>
                        <td></td>
                        {{#carts}}
                        <div>
                        <td id="total"></td>
                        </div>
                        {{/carts}}
                        <td></td>
                    </tbody>
                </table>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
{{#carts}}
<script type="text/javascript">
    var number = {{total_harga}};
    document.getElementById("total").innerHTML = "Rp. "+number.toLocaleString();
</script>
{{/carts}}

