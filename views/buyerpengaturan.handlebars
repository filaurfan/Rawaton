<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
	  	<h1>Pengaturan</h1>
	  	{{#profile_buyer}}
	  	<ol class="breadcrumb">
			<li><a href="/seller/dashboard/{{ id_user }}"><i class="fa fa-dashboard"></i> Beranda</a></li>
			<li class="active">Pengaturan</li>
	  	</ol>
	  	{{/profile_buyer}}
	</section>

	<!-- Main content -->
	
	<section class="content">
	{{#profile_buyer}}
	<form method="post" action="/seller/pengaturan/{{ id_user }}" enctype="multipart/form-data">
	{{/profile_buyer}}
		<div class="row">
			<div class="col-md-3">
				 {{#profile_seller}}
				  <img class="profile-user-img img-responsive img-circle" src='/uploads/{{ gambar_user }}'>
				  {{/profile_seller}}
				  <div class="form-group">
					<input type="file" id="picture_profile" name="picture_profile"><br>
				  </div>
			</div>
			<!-- /.col -->
			<div class="col-md-9">
				{{#profile_buyer}}
				<div class="form-group">
				  	<label for="fn">Nama</label>
				  	<input type="text" class="form-control" name="nama_seller" value={{ nama_user }}>
				</div>
				<div class="form-group">
				  	<label for="fn">No HP</label>
				  	<input type="text" class="form-control" name="no_telp_seller" value={{ no_telp_user }}>
				</div>
				{{/profile_buyer}}
				{{#alamat_buyer}}
				<div class="form-group">
				  	<label for="fn">Alamat</label>
				  	<input type="text" class="form-control" name="jalan" value={{ alamat_jalan }}>
				</div>
				<div class="form-group">
				  	<label for="fn">Kecamatan</label>
				  	<input type="text" class="form-control" name="kecamatan" value={{ alamat_kecamatan }}>
				</div>
				<div class="form-group">
				  	<label for="fn">Kota</label>
				  	<input type="text" class="form-control" name="kota" value={{ alamat_kota }}>
				</div>
				<div class="form-group">
				  	<label for="fn">Kabupaten</label>
				  	<input type="text" class="form-control" name="kabupaten" value={{ alamat_kabupaten }}>
				</div>
				<div class="form-group">
				  	<label for="fn">Provinsi</label>
				  	<input type="text" class="form-control" name="provinsi" value={{ alamat_provinsi }}>
				</div>
				<div class="form-group">
				  	<label for="fn">Kode Pos</label>
				  	<input type="text" class="form-control" name="kode_pos" value={{ alamat_kode_pos }}>
				</div>
				{{/alamat_buyer}}
				<input type="submit" name="mit" class="btn btn-primary" value="Simpan">
				<button type="button" onclick="cancel()" class="btn btn-success">Batal</button>
			</div>
			<!-- /.col -->
	  	</div>
	  	<!-- /.row -->
	</form>
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->


{{#profile_buyer}}
<script>
  function cancel(){
	window.location.href = '/seller/profile/{{ id_user }}';
  }
</script>
{{/profile_buyer}}
