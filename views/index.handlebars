<div class="wrap">
<div class="header_slide">
	<div class="header_bottom_left">				
		<div class="categories">
		  	<ul>
			 	<h3>Categories</h3>
			    <li><a href="/category/otomotif">Otomotif</a></li>
				<li><a href="/category/smartphone">Smartphone</a></li>
				<li><a href="/category/fashion">Fashion</a></li>
			</ul>
		</div>					
	</div>
	<div class="header_bottom_right">					 
		<div class="slider">					     
			<div id="slider">
			    <div id="mover">
			    {{#products}}
			        <div id="slide-1" class="slide">			                    
						<div class="slider-img"><a href="/product/{{ _id }}">
							<img src="/uploads/{{ picture_product }}" alt="learn more" /></a>		
						</div>
						<div class="slider-text">
		                    <!-- <h1>Clearance<br><span>SALE</span></h1>
		                    <h2>UPTo 20% OFF</h2> -->
							<div class="features_list">
								<p>{{ description_product }}</p>		
							</div>
							<a href="#" class="button">Shop Now</a>
					    </div>			               
						<div class="clear"></div>				
				   	</div>	
				{{/products}}	

				</div>		
			</div>
			<div class="clear"></div>					       
		</div>
	</div>
	<div class="clear"></div>
</div>
</div>

<div class="main">
    <div class="content">
    	<div class="content_top">
    		<div class="heading"><h3>New Products</h3></div>
    		<div class="see"><p><a href="/seller/product/all">See all Products</a></p></div>
    		<div class="clear"></div>
    	</div>
	    <div class="section group">
	    	{{#each products}}
			<div class="grid_1_of_4 images_1_of_4">
				<a href="/product/{{ _id }}"><img src='/uploads/{{ picture_product }}'></a><h2>{{ name_product }}</h2>
				<div class="price-details">
				    <div class="price-number"><p><span class="rupees">Rp.{{ price_product }}</span></p></div>
					<div class="add-cart"><h4><a href="#">Add to Cart</a></h4></div>
					<div class="clear"></div>
				</div>	 
			</div>
			{{/each}}
		</div>
  	</div>
 </div>