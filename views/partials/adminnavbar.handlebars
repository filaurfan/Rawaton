                  <a href="/seller/profile/{{ _id }}" class="btn btn-default btn-flat">Profile</a>
                {{/users}}
                </div>
                <div class="pull-right">
                  <a href="/users/logout" class="btn btn-default btn-flat">Sign out</a>
                </div>
