

<div class="wrap">
  <div class="section group"> 
    <h2 class="page-header">Register</h2>
  {{#if errors}}
        {{#each errors}}
          <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
  {{/if}}

<form class="form-horizontal" method="post" action="/users/register">
    
    <div class="form-group">
      <div class="cols-sm-10">
        <div class="list-group"> 
          <table border="1px" width="100%">
            <tr>
              <td width="20%"><label class="table">Anda sebagai : </label></td>
              <td width="40%"><input type="radio" onclick="displayResult(this.value)" name="tipe" value="seller"/> SELLER</td>
              <td width="40%"><input type="radio" onclick="displayResult(this.value)" name="tipe" value="buyer"/> BUYER</td>
              <input type="hidden" name="role" id="role" value="" />
            </tr>
          </table>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="false"></i></span>
          <input type="text" class="form-control" name="name" id="name"  placeholder="Masukkan Nama Lengkap"/>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="true"></i></span>
          <input type="text" class="form-control" name="username" id="username"  placeholder="Masukkan Username"/>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i></span>
          <input type="text" class="form-control" name="email" id="email"  placeholder="Masukkan Email"/>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
          <input type="password" class="form-control" name="password" id="password"  placeholder="Masukkan Password"/>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
          <input type="password" class="form-control" name="password2" id="password2"  placeholder="Ketikan ulang Password"/>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-xs-offset-3 col-xs-9">
      <label class="checkbox-inline">
        <input type="checkbox" id="setuju" >  Saya Setuju dengan <a href="#">Kebijakan dan Ketentuan</a> yang berlaku.
      </label>
      </div>
    </div>
    <div class="form-group ">
      <button type="submit" name="register" id="register" class="btn btn-primary btn-lg btn-block login-button log-btn" >Register</button>
    </div>
  </form>


      </div>      
</div>
<script>
  function displayResult(tipe){ 
    document.getElementById("role").value=tipe; 
  }
</script>
