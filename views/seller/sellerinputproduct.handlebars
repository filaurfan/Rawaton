<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<h1>Add Product</h1>
		<ol class="breadcrumb">
		  <li><a href="/seller/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
		  <li><a href="/seller/list">Product</a></li>
		  <li class="active">Add Product</li>
		</ol>
	</section>

	<!-- Main content -->
	<section class="content">
	<form method="post" action="/seller/input">
		<div class="form-group">
			<label for="name_product">Name</label>
			<input type="text" class="form-control" name="name_product" id="name_product">
		</div>
		<div class="form-group">
			<label for="category">Category</label>
			<select class="form-control" onclick="displayResult(this.value)" name="category" id="category">
				<option name="category" value="otomotif">Otomotif</option>
				<option name="category" value="smartphone_Handphone">Smartphone & Handphone</option>
				<option name="category" value="fashion">Fashion</option>
			</select>
			<input type="hidden" name="category_product" id="category_product" value="" />
		</div>
		<div class="form-group">
			<label for="price_product">Price</label>
			<input type="text" class="form-control"  name="price_product" id="price_product">
		</div>
		<div class="form-group">
			<label for="entity_product">Entity</label>
			<input type="text" class="form-control" name="entity_product" id="entity_product">
		</div>
		<div class="form-group">
			<label for="description_product">Descryption</label>
			<textarea rows="5" name="description_product" id="description_product" class="form-control"></textarea>
		</div>
		<div class="form-group">
			<label for="picture_product">Image</label>
			<input type="file" name="picture_product" id="picture_product"><br>
		</div>
		<input type="submit" name="mit" class="btn btn-primary" value="Submit">
		<button type="reset" class="btn btn-success">Cancel</button>
	</form>
	</section>
</div>

<script>
  function displayResult(category){ 
    document.getElementById("category_product").value=category; 
  }
</script>