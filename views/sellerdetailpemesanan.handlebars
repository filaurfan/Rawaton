

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>List Pemesanan</h1>
        {{#carts}}
        <small>{{ tanggal_buat }}</small>
        <ol class="breadcrumb">
            <li><a href="/seller/dashboard/{{ id_user }}"><i class="fa fa-dashboard"></i> Beranda</a></li>
            <li><a href="/seller/pemesanan/{{ id_user }}"><i class="fa fa-shopping-cart"></i> Pemesanan</a></li>
            <li><a href="/seller/listpemesanan/{{ id_user }}/{{ _id }}"><i class="fa fa-shopping-cart"></i> List Pemesanan</a></li>
        </ol>
        {{/carts}}
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-8">
            
        </div>
        <div class="col-md-12 box-body">
            <div class="table">
                <table class="table table-bordered table-hover table-striped" >
                    <thead>
                        <tr>
                            <th width="10px">No</th>
                            <th width="100px">Gambar</th>
                            <th width="150px">Nama Barang</th>
                            <th width="150px">Nama Toko</th>
                            <th width="10px">Jumlah</th>
                            <th width="50px">Harga</th>
                        </tr>
                    </thead>
                    {{#each items}}
                    <tbody>
                        <td>{{ id_product }} </td>
                        <td><img class="profile-user-img img-responsive img-circle" src="../../{{ gambar_item }}"></td>
                        <td>{{ nama_product }}</td>
                        <td>{{ nama_seller }}</td>
                        <td>{{ jumlah }}</td>
                        <td>Rp. {{ harga_nego }}</td>
                    </tbody>
                    {{/each}}
                    <tbody>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>Total</td>
                        <td></td>
                        <td></td>
                        {{#carts}}
                        <div>
                        <td id="total"></td>
                        </div>
                        {{/carts}}
                        <td></td>
                    </tbody>
                </table>
        </div>


        {{#carts}}
        <form class="form-horizontal" method="post" action="/cart/konfirmasipengiriman/{{ id_seller }}/{{ _id }}">
        {{/carts}}
        <div class="table">
                <table class="table table-bordered table-hover table-striped" >
                    <thead>
                        <tr>
                            <th width="150px">Nama Pembeli</th>
                            <th width="10px">Alamat Pengiriman</th>
                            <th width="100px">Tanggal Pengiriman</th>
                            <th width="100px">Status Pengiriman</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                    {{#alamats}}
                        <td>{{ nama_penerima }}</td>
                        <td><p>{{ alamat_jalan_penerima }}, {{ alamat_kecamatan_penerima }}, {{ alamat_kota_penerima }}, {{ alamat_kabupaten_penerima }}, {{ alamat_provinsi_penerima }}, {{ alamat_kode_pos_penerima }}</p></td>
                    {{/alamats}}
                    {{#carts}}
                        <td name="tanggal_pengiriman" >{{ tanggal_pengiriman }}</td>
                        <td><select class="form-control">
                          <option name="status_pengiriman" value="{{ status_pengiriman }}">{{ status_pengiriman }}</option>
                          <option name="status_pengiriman" value="blm_kirim">Belum dikirim</option>
                          <option name="status_pengiriman" value="sdah_kirim">Sudah dikirim</option>
                          <option name="status_pengiriman" value="sdah_sampai">Sudah sampai</option>
                        </select></td>
                    {{/carts}}
                    </tbody>
                    
                </table>
        </div>
        <button type="submit" class="add-cart" >Update</button>
        </form> 



        {{#carts}}
        <form class="form-horizontal" method="post" action="/cart/konfirmasipembayaran/{{ id_seller }}/{{ _id }}">
        {{/carts}}
        <div class="table">
                <table class="table table-bordered table-hover table-striped" >
                    <thead>
                        <tr>
                            <!-- <th width="150px">Nomor Rekening Pembeli</th> -->
                            <th width="10px">Tanggal Pembayaran</th>
                            <th width="100px">Status Pembayaran</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- <td></td> -->
                    {{#carts}}
                        <td name="tanggal_pembayaran">tanggal_pembayaran</td>
                        <td><select class="form-control">
                          <option name="status_pembayaran" value="{{ status_pembayaran }}">{{ status_pembayaran }}</option>
                          <option name="status_pembayaran" value="blm_bayar">Belum Terbayar</option>
                          <option name="status_pembayaran" value="sdah_bayar">Sudah Terbayar</option>
                        </select></td>
                    {{/carts}}
                    </tbody>
                </table>
        </div>
        <button type="submit" class="add-cart" >Update</button>
        </form> 
    </section>
    {{#carts}}
    <button type="submit" class="add-cart" href="/seller/pemesanan/{{ id_seller }}">Back</button>
    {{/carts}}
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
{{#carts}}
<script type="text/javascript">
    var number = {{total_harga}};
    document.getElementById("total").innerHTML = "Rp. "+number.toLocaleString();
</script>
{{/carts}}
